<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :first_name, class:"form-control", placeholder:"John" %>
  </div>

  <div class="form-group">
    <%= form.text_field :last_name, class:"form-control", placeholder:"Doe" %>
  </div>

  <div class="form-group">
    <%= form.text_field :email, class:"form-control", placeholder:"name@example.com" %>
  </div>

  <div class="form-group">
    <%= form.number_field :phone, class:"form-control", placeholder:"xxxx-xxx-xxx" %>
  </div>

  <div class="form-group">
    <%= form.text_field :twitter, class:"form-control", placeholder:"@xxx" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  <br/>
<% end %>
